package components

templ Navbar(activeSection string) {
	<nav class="flex flex-col w-64 min-h-screen text-white border-r bg-slate-900 border-slate-700">
		<div class="p-6 border-b border-slate-700">
			<h2 class="text-xl font-bold text-white">YourVoice Admin</h2>
		</div>
		<ul class="flex-1 py-4">
			<!-- Dashboard -->
			@navBarItem("dashboard", "🏠", "Dashboard", activeSection, "/admin")
			<!-- Voting System Section -->
			@navBarSperator("Voting System")
			@navBarItem("vote-events", "🗳", "Vote Events", activeSection, "/admin/vote/events")
			@navBarItem("parties", "🏛", "Parties", activeSection, "/admin/vote/parties")
			@navBarItem("candidates", "👥", "Candidates", activeSection, "/admin/vote/candidates")
			<!-- Messaging System Section -->
			@navBarSperator("Feedback System")
			@navBarItem("feedback-sessions", "💬", "Feedback Sessions", activeSection, "/admin/feedback/sessions")
			@navBarItem("messages", "📝", "Messages", activeSection, "/admin/feedback/messages")
			<!-- Data & Insights Section -->
			@navBarSperator("Data & Insights")
			@navBarItem("reports", "📋", "Reports", activeSection, "/admin/data/reports")
			@navBarItem("analytics", "📊", "Analytics", activeSection, "/admin/data/analytics")
			@navBarItem("logs", "📝", "System Logs", activeSection, "/admin/data/logs")
		</ul>
	</nav>
}

templ navBarSperator(title string) {
	<li class="pt-4 mt-6 mb-3 border-t border-slate-700">
		<div class="py-2 px-6 text-xs font-semibold tracking-wider uppercase text-slate-400">
			{ title }
		</div>
	</li>
}

templ navBarItem(section, icon, label, activeSection, href string) {
	<li class="mb-1">
		if activeSection == section {
			<a href={ templ.URL(href) } class="flex items-center py-3 px-6 w-full text-left text-white no-underline border-r-4 border-blue-500 transition-colors bg-slate-800">
				<span class="mr-3 text-lg">{ icon }</span>
				<span class="font-medium">{ label }</span>
			</a>
		} else {
			<a href={ templ.URL(href) } class="flex items-center py-3 px-6 w-full text-left no-underline transition-colors hover:text-blue-400 text-slate-300 hover:bg-slate-800">
				<span class="mr-3 text-lg">{ icon }</span>
				<span>{ label }</span>
			</a>
		}
	</li>
}
